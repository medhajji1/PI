{% extends 'logbase.html.twig' %}

{% block body %}
    <div class="main">

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
                        {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}

                        <div class="form-group">
                            <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            {{ form_widget(form.cin, {'attr': {'placeholder': 'Votre cin', 'class': 'form-control'}}) }}
                            {{ form_errors(form.cin)}}
                        </div>
                        <div class="form-group">
                            <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            {{ form_widget(form.nom, {'attr': {'placeholder': 'Your Name', 'class': 'form-control', 'id': 'name'}}) }}
                            {{ form_errors(form.nom)}}
                        </div>
                        <div class="form-group">
                            <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            {{ form_widget(form.prenom, {'attr': {'placeholder': 'Votre prenom', 'class': 'form-control', 'id': 'name'}}) }}
                            {{ form_errors(form.prenom)}}
                        </div>
                        <div class="form-group">
                            <label for="email"><i class="zmdi zmdi-email"></i></label>
                            {{ form_widget(form.email, {'attr': {'placeholder': 'Votre email', 'class': 'form-control', 'id': 'email'}}) }}
                            {{ form_errors(form.email)}}
                        </div>
                        <div class="form-group">
                            <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                            {{ form_widget(form.motdepasse, {'attr': {'placeholder': 'Votre mot de passe', 'class': 'form-control','id':'pass'}}) }}
                            {{ form_errors(form.motdepasse)}}
                        </div>
                        <div class="form-group">
                            <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            {{ form_widget(form.numerotelephone, {'attr': {'placeholder': 'Votre tel', 'class': 'form-control'}}) }}
                            {{ form_errors(form.numerotelephone)}}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.typeutilisateur)}}
                            {{ form_errors(form.typeutilisateur)}}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.image) }}
                        </div>
                        <div class="form-group">
                            <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                            <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                        </div>
                        <div class="form-group form-button">
                            {{ form_widget(form.Update_Account, {'attr': {'placeholder': 'Votre tel', 'class': 'form-submit'}})}}
                        </div>
                        {{ form_end(form)}}
                    </div>
                    <div class="signup-image">
                        <figure><img src="{{ asset('login/images/signup-image.jpg') }}" alt="sing up image"></figure>
                        <a href="{{ path('app_login') }}" class="signup-image-link">I am already member</a>
                    </div>
                </div>
            </div>
        </section>

    </div>
{% endblock %}