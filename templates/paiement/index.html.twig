    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Liste De paiements</h3>           
        </div>
        <form method="get">
        <div class="form-group">
            <label for="sort">Sort by:</label>
            <select id="sort" name="sort">
                <option value="">-- Select --</option>
                <option value="idpaiement_asc">ID (ascending)</option>
                <option value="idpaiement_desc">ID (descending)</option>
                <option value="montant_asc">Montant (ascending)</option>
                <option value="montant_desc">Montant (descending)</option>
                <option value="date_asc">Date (ascending)</option>
                <option value="date_desc">Date (descending)</option>
            </select>
        </div>
        <div class="form-group">
            <label for="search">Search:</label>
            <input type="text" id="search" name="search">
        </div>
        <button type="submit">Submit</button>
    </form>
        <div class="card-body">
            <div class="table-responsive" >
                <table class="table table-hover table-sm table-responsive-md">
                <thead>
                  <tr>
                    <th>Idpaiement</th>
                    <th>Montant</th>
                    <th>Date</th>
                    <th>Motif</th>
                    <th>Email</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  {% for paiement in paiements %}
                    <tr>
                      <td>{{ paiement.idpaiement }}</td>
                      <td>{{ paiement.montant }}</td>
                      <td>{{ paiement.date ? paiement.date|date('Y-m-d') : '' }}</td>
                      <td>{{ paiement.motif }}</td>
                      <td>{{ paiement.email }}</td>
                      <td>
                        <a href="{{ path('app_paiement_show', {'idpaiement': paiement.idpaiement}) }}" class="btn btn-info btn-sm">Show</a>
                        <a href="{{ path('app_paiement_edit', {'idpaiement': paiement.idpaiement}) }}" class="btn btn-primary btn-sm">Edit</a>
                      </td>
                    </tr>
                  {% else %}
                    <tr>
                      <td colspan="6">No records found</td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
        </div>
