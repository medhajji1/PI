    <script>
$('#search-input').on('keyup', function() {
  var searchTerm = $(this).val();
  $.ajax({
    url: '/searchu',
    type: 'GET',
    data: { q: searchTerm },
    success: function(data) {
      var tableRows = '';
      data.forEach(function(utilisateur) {
        tableRows += '<tr><td><img src="' + utilisateur.image + '" style="width:70%;length:70%;" alt="My Image"></td><td>' + utilisateur.cin + '</td><td>' + utilisateur.nom + '</td><td>' + utilisateur.prenom + '</td><td>' + utilisateur.typeutilisateur + '</td><td>' + utilisateur.email + '</td><td>' + utilisateur.motdepasse + '</td><td>' + utilisateur.numerotelephone + '</td><td><button class="btn btn-danger btn-sm" onclick="deleteUser(\'' + utilisateur.id + '\')">Delete</button></td></tr>';
      });
      $('table tbody').html(tableRows);
    }
  });
});
</script>
