{% extends 'base.html.twig' %}

{% block title %}Contrat{% endblock %}
{% block body %}
  <div class="hero-wrap">
    <div class="hero-wrap ftco-degree-bg" style="background-image: url('{{ asset('front/images/bg_3.jpg') }}');" data-stellar-background-ratio="0.5">
      <div class="overlay"></div>
      <div class="container py-5">
        <div class="row justify-content-center">
          <div class="col-md-7 heading-section text-center">
            <h2 class="mb-4" style="padding-top: 121px;">Ajouter Contrat</h2>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-md-8">
            {{ form_start(form) }}
            <div class="form-group row">
              <div class="col-md-6">
                {{ form_label(form.date, 'Date', {'label_attr': {'style': 'color: black'}}) }}
                {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
              </div>
              <div class="col-md-6">
                {{ form_label(form.idreservation, 'ID Réservation', {'label_attr': {'style': 'color: black'}}) }}
                {{ form_widget(form.idreservation, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>
            <div class="form-group row">
              <div class="col-md-6">
                {{ form_label(form.idproprietaire, 'ID Propriétaire', {'label_attr': {'style': 'color: black'}}) }}
                {{ form_widget(form.idproprietaire, {'attr': {'class': 'form-control'}}) }}
              </div>
              <div class="col-md-6">
                {{ form_label(form.idlocataire, 'ID Locataire', {'label_attr': {'style': 'color: black'}}) }}
                {{ form_widget(form.idlocataire, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>
            <div class="form-group">
              {{ form_label(form.motif, 'Motif', {'label_attr': {'style': 'color: black'}}) }}
              {{ form_widget(form.motif, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group text-center">
              <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
            </div>
            {{ form_end(form) }}
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
